<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
<!--         <format>dir</format> -->
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>sponge.bat</include>
            </includes>
            <lineEnding>dos</lineEnding>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>sponge</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${examplesProject}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-standalone-camel-groovy</directory>
            <outputDirectory>/examples/standalone/camel_groovy</outputDirectory>
            <includes>
                <include>config/**</include>
                <include>kb/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-standalone-camel-xml</directory>
            <outputDirectory>/examples/standalone/camel_xml</outputDirectory>
            <includes>
                <include>config/**</include>
                <include>kb/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/release</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-docs</directory>
            <outputDirectory>docs</outputDirectory>
            <excludes>
                <exclude>*.dia</exclude>
                <exclude>*.di*</exclude>
                <exclude>*-developer-guide.*</exclude>
                <exclude>*-quickstart.html</exclude>
                <exclude>*-user-guide.html</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apidocs</directory>
            <outputDirectory>docs/javadoc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-sources/license</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>THIRD-PARTY.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-resources</directory>
            <outputDirectory>docs/licenses</outputDirectory>
            <includes>
                <include>licenses.xml</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
<!--         <fileSet> -->
<!--             <directory>${project.build.directory}</directory> -->
<!--             <outputDirectory>/</outputDirectory> -->
<!--             <includes> -->
<!--                 <include>*.jar</include> -->
<!--             </includes> -->
<!--         </fileSet> -->
    </fileSets>
<!--     <files> -->
<!--         <file> -->
<!--             <source>${project.build.directory}/${project.build.finalName}.jar</source> -->
<!--             <destName>${executableJar}</destName> -->
<!--         </file> -->
<!--     </files> -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>