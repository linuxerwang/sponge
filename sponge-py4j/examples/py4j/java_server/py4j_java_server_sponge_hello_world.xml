<?xml version="1.0" encoding="UTF-8"?>
<sponge xmlns="http://sponge.openksavi.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://sponge.openksavi.org http://sponge.openksavi.org/schema/config.xsd">

    <knowledgeBases>
        <knowledgeBase name="kb">
            <file>py4j_java_server_sponge_hello_world.py</file>
        </knowledgeBase>
    </knowledgeBases>

    <plugins>
        <plugin name="py4j" class="org.openksavi.sponge.py4j.GatewayServerPy4JPlugin">
            <configuration>
                <!-- Python must have Py4J installed, e.g. pip install py4j. You may use system properties, e.g. ${user.home}/virtualenv1/bin/python -->
                <!-- Python 3 has been used for the example. -->
                <pythonScript>
                    <executable>/usr/local/bin/python3</executable>
                    <argument>examples/py4j/java_server/py4j_java_server_python_hello_world.py</argument>
                    <waitSeconds>60</waitSeconds>
                    <redirectType>STRING</redirectType>
                </pythonScript>
                <pythonScriptBeforeStartup>false</pythonScriptBeforeStartup>
            </configuration>
        </plugin>
    </plugins>
</sponge>

