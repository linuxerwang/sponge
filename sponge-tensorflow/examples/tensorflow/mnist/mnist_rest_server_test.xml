<?xml version="1.0" encoding="UTF-8"?>
<sponge xmlns="http://sponge.openksavi.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sponge.openksavi.org http://sponge.openksavi.org/schema/config.xsd">

    <knowledgeBases>
        <knowledgeBase name="mnist" displayName="MNIST">
            <file>classpath:org/openksavi/sponge/tensorflow/mnist/mnist_library_common.py</file>
            <file>classpath:org/openksavi/sponge/tensorflow/mnist/mnist_library_predict.py</file>
            <file>classpath:org/openksavi/sponge/tensorflow/mnist/mnist_library_admin.py</file>
            <file>mnist_rest_server.py</file>
        </knowledgeBase>
    </knowledgeBases>

    <plugins>
        <plugin name="py4j" class="org.openksavi.sponge.py4j.ClientServerPy4JPlugin">
            <configuration>
                <facadeInterface>org.openksavi.sponge.tensorflow.mnist.MnistService</facadeInterface>
                <pythonScript>
                    <executable>${user.home}/tensorflow/bin/python3</executable>
                    <argument>mnist_service.py</argument>
                    <argument>--modelfile=${sponge.configDir}/data/mnist_model.h5</argument>
                    <argument>--tempdir=${sponge.configDir}/_tmp_</argument>
                    <workingDir>${sponge.configDir}/python</workingDir>
                    <waitForPositiveLineRegexp>MNIST service has started.</waitForPositiveLineRegexp>
                    <waitForNegativeLineRegexp>MNIST service has failed to start.</waitForNegativeLineRegexp>
                    <outputRedirect>LOGGER</outputRedirect>
                    <errorRedirect>LOGGER</errorRedirect>
                </pythonScript>
            </configuration>
        </plugin>
    </plugins>
</sponge>

