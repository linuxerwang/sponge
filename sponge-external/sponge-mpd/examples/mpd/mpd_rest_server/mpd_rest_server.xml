<?xml version="1.0" encoding="UTF-8"?>
<sponge xmlns="http://sponge.openksavi.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sponge.openksavi.org http://sponge.openksavi.org/schema/config.xsd">

    <knowledgeBases>
        <knowledgeBase name="mpd" displayName="MPD">
            <file>classpath:org/openksavi/sponge/mpd/mpd_library.py</file>
        </knowledgeBase>
        <knowledgeBase name="administration" displayName="Administration">
            <file>classpath:org/openksavi/sponge/restapi/server/administration_library.py</file>
        </knowledgeBase>
        <knowledgeBase name="sample" displayName="Samples">
            <file>mpd_rest_server_main.py</file>
        </knowledgeBase>
        <knowledgeBase name="security" displayName="Security">
            <file>mpd_rest_server_security.py</file>
        </knowledgeBase>
    </knowledgeBases>

    <plugins>
        <plugin name="mpd" class="org.openksavi.sponge.mpd.MpdPlugin">
            <configuration>
                <hostname>localhost</hostname>
                <autoStartMonitor>false</autoStartMonitor>
            </configuration>
        </plugin>
        <plugin name="restApiServer" class="org.openksavi.sponge.restapi.server.RestApiServerPlugin">
            <configuration>
                <port>1836</port>
                <publicActions>mpd:,administration:,sample:</publicActions>
                <securityServiceClass>org.openksavi.sponge.restapi.server.security.SimpleInMemorySecurityService</securityServiceClass>
            </configuration>
        </plugin>
    </plugins>
</sponge>

